<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:padding="20dp"
        android:background="@drawable/airbnb_home_screen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical">
        <!-- Button search start -->
        <LinearLayout
            android:id="@+id/button_search"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/search_button"
            android:layout_marginTop="20sp"
            android:paddingLeft="64dp"
            android:paddingRight="64dp"
            >
            <TextView
                android:backgroundTint="@color/primary_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_search_24"
                android:layout_gravity="center"
                android:textSize="24sp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="0dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginLeft="4dp"
                android:text="Where are you going?"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:background="?android:attr/selectableItemBackground"
                />
        </LinearLayout>
        <!-- Button search end -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Go"
                android:textColor="@color/white"
                android:textSize="80sp"
                android:typeface="monospace" />
        <TextView
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Near"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:textSize="80sp"
            android:typeface="monospace"
            />
        </LinearLayout>
        <!-- Button explore nearby start -->
        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:background="@drawable/button_explore_nearby_stays"
            android:layout_marginTop="28sp"
            >
            <Button
                android:id="@+id/button_explore_nearby_stays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:text="Explore nearby stays"
                android:backgroundTint="@color/teal_700"
                android:gravity="center_horizontal"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:background="?android:attr/selectableItemBackground"
                />
        </LinearLayout>
        <!-- Button explore nearby end -->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>